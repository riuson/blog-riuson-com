{
  "baseurl": "/",
  "url": "https://blog.riuson.com",

  "collections": [
    {
      "name": "en",
      "path": "content/_en",
      "mask": "**.md",
      "output": true
    },
    {
      "name": "ru",
      "path": "content/_ru/",
      "mask": "**.md",
      "output": true
    }
  ],

  "defaults": [
    {
      "mask": "content/**",
      "properties": {
        "layout": "default",
        "permalink": "/:path/"
      }
    },
    {
      "mask": "content/_en/**",
      "properties": {
        "language": "en"
      }
    },
    {
      "mask": "content/_ru/**",
      "properties": {
        "language": "ru"
      }
    }
  ],

  "assets": [
    "assets/*"
  ]
}